                                //-2 Шаг
                                .quiz__right-step
                                    h3.quiz__right-step-title
                                        span #{i++}. &#32;
                                        |Укажите возраст сайта

                                    .quiz__right-step-wrapper
                                        .quiz__right-step-items
                                            label.quiz__item.quiz__item-column.active
                                                input.radio_btn(name='quiz_age', type='radio', value='Молодой (до 1 года)', checked)
                                                .quiz__item-img.quiz__item-img-column
                                                    img.lazy-quiz(data-src='img/quiz/age-1.jpg', alt='дерево')
                                                +quizTitle('Молодой (до 1 года)')
                                                .quiz__item-check.quiz__item-check-column

                                            label.quiz__item.quiz__item-column
                                                input.radio_btn(name='quiz_age', type='radio', value='Бывалый (более 3 лет)')
