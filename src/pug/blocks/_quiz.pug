mixin quiz
    #quiz.quiz-modal
        form.quiz_content
            .quiz_content-wrapper
                .quiz_btn-close#closeQuiz

                .quiz_block
                    //-Шапка
                    .quiz__header
                        p.quiz__header-title В конце опроса вас ждёт подарок!
                        .quiz__header-progressBar
                            .quiz__header-progressBar-done#progressBarDone
                            img.quiz__header-progressBar-img.lazy(data-src='img/quiz/icon-gift.svg', alt='подарок')


                    //-Левя часть
                    .quiz_block-left
                        .quiz__left-stage Шаг &#32;
                            span.quiz__left-stage-num.quizStageNum 1
                            |&#32;/&#32;
                            span.quiz__left-stage-length.quizStageLength 6

                        .quiz__left-gift
                            .quiz__left-gift-title
                                img.quiz__left-gift-title-img.lazy(data-src='img/quiz/icon-gift.svg', alt='подарок')
                                p.quiz__left-gift-title-info В конце опроса вас
                                    br
                                    |&#32; ждёт подарок!

                            //-Часы подарок
                            .quiz__left-gift-paginator
                                .quiz__left-gift-paginator-pie-wrapper#quizGiftPaginator
                                    .quiz__left-gift-paginator-pie#quizGiftPaginatorPie
                                        div#quizGiftPaginatorCircleBlock
                                            div#quizGiftPaginatorCircle
                                img.quiz__left-gift-paginator-img(src='img/quiz/gift.png', alt='подарок')
                            img.quiz__left-gift-img.lazy(data-src='img/quiz/test2.png', alt='девушка показывает на подарок')


                    .quiz_block-right-wrapper
                        .quiz_block-right
                            h2.quiz__right-title#quizTitle Ответь на 8 вопросов и получи бесплатный аудит своего сайта со стратегией продвижения на основании конкурентного анализа
                            .quiz__right-steps

                                //-1 Шаг
                                .quiz__right-step.active
                                    h3.quiz__right-step-title
                                        span #{i++}. &#32;
                                        |Введите адрес вашего сайта
                                    .quiz__right-step-wrapper
                                        label.quiz__form-input-group.site
